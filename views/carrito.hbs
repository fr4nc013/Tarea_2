    <a href="/" style="color: white; font-size: 30px;">Practica2</a>
    <div id="lista">
        <ul class="opciones">
            <li><a id="carrito" href="/carrito">CARRITO</a></li>
            <li><a href="/">HISTORIAL</a></li>
            <li><a href="/login">INGRESAR</a></li>
        </ul>
    </div>
